// tsconfig.json
{
  "compilerOptions": {
    // this aligns with Vue's browser support
    "target": "ES2022",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    // if using webpack 2+ or rollup, to leverage tree shaking:
    "module": "es2015",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}